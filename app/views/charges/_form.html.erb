<%= form_for([@booking, @booking.charges.build]) do |f| %>

  <div class="field">
    <%= f.hidden_field :charge_datetime %>
 <%#= f.datetime_select :charge_datetime, :ampm => true, :start_minute => [0,15,30,45] %>
  </div>

  <% if current_user.customer? and @booking.Matched?%>
    <form action="" method="POST">
      <script
        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-amount=""
        data-name="Lets Nurse"
        data-description="Stripe Payment Gateway"
        data-image="<%= image_url('stripeLogo.png') %>"
        data-locale="auto"
        data-currency="hkd">
      </script>
    </form>
  <% end %>

<% end %>

